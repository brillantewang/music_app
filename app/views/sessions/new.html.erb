<h2>Sign In!</h2>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <li><%=error%></li>
  <% end %>
<% end %>
<br>

<form action="<%=session_url%>" method="post">
  <label for="email">
    Email: <input type="text" name="user[email]">
  </label>

  <label for="password">
    Password: <input type="text" name="user[password]">
  </label>

  <input type="submit" value="Sign in!">
</form>
